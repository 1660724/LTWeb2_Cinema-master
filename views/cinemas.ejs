<div class="modal fade" id="cinemaInfoForm" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header" style="border:0">
                <img src="images/wings_2.png" style="height: 30px; width: 30px; margin-right:5px" />
                <span style="color:skyblue">Wings
                    <span style="font-weight:bold; color: white">Cinema</span>
                </span>
                <button id="closeCinemaInfoFormButton" type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="divCinemaInfo">
                    <table>
                        <tbody>
                            <% cinemaList.forEach((cinema,index) => { %>
                                <tr>
                                    <td><%= index+1 %></td>
                                    <td>
                                        <%= cinema.dataValues.name %>
                                    </td>
                                    <td>
                                        <i class='fas fa-map-marker-alt' style='font-size:18px; color:#B33A3A'></i>
                                        <%= cinema.dataValues.address %>
                                    </td>
                                    <td>
                                        <center>
                                            <button class="btn btn-info cinema-map-button" value="<%= cinema.id %>" >
                                                <i class='fas fa-map-marker-alt' style='font-size:18px'></i> Map</button>
                                        </center>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
            <div id="cinemaMap">
            </div>
        </div>
    </div>
</div>